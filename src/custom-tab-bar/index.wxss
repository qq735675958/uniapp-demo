.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(50px + env(safe-area-inset-bottom));
  display: flex;
  z-index: 1;
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #fff;
  box-shadow: 0 6rpx 12rpx 12rpx rgba(209, 209, 209, 0.4);
}
.scan {
  position: fixed;
  bottom: calc(20rpx + env(safe-area-inset-bottom) / 2);
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;	
}
.image {
  width: 100rpx;
  height: 100rpx;
}
.scan-text {
  text-align: center;
  font-size: 20rpx;
  color: #1e1e1e;
  font-weight: 400;
}

.tab-bar-content {
  display: flex;
  width: 100%;
  margin-top: 10rpx;
  background: #fff;
  position: fixed;
  bottom: calc(20rpx + (env(safe-area-inset-bottom) / 2));
  left: 0;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* padding-top: 5px; */
}

.coverImg {
  width: 56rpx;
  height: 56rpx;
}

.coverText {
  font-size: 20rpx;
  line-height: 28rpx;
}
